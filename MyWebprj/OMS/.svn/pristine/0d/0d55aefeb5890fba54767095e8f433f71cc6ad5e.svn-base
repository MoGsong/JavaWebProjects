.form-group{
	margin-top: 24px;
}

.box{
    width: 100%;
    height: 50px;
    text-align: center;
}

input{
    display: none;
}

label{
    width: 100%;
    height: 100%;
    display: inline-block;
    position: relative;
    line-height: 50px;
    color: black;
}
label:active{
    background: #EEEEEE;
}
label:after{
    content: "";/*必须设置*/
    display: inline-block;
    width: 20px;
    height: 20px;
    border: 1px solid #999;
    position: absolute;
    top: 15px;
    left: 15px;
    border-radius: 20px;
}

input:checked+label:after{
    background-color: white;
    border: 5px solid #176abd;
}

.line{
    width: 100%;
    height: 1px;
    background: #ccc;
    opacity: 0.2;
}
