package com.gxnu.test;

import java.util.List;

import com.gxnu.entity.Menu;
import com.gxnu.entity.Operator;
import com.gxnu.entity.Role;
import com.gxnu.service.IMenuService;
import com.gxnu.service.IOperatorService;
import com.gxnu.service.imp.MenuService;
import com.gxnu.service.imp.OperatorService;

public class Test {

	public static void main(String[] args) {
		IMenuService ims = new MenuService();
		IOperatorService ios = new OperatorService();
		//测试增
		Menu menu = new Menu("个人信息修改",0,"","");
		Operator operator = new Operator("user","user","10086","123456@163.cn","a.jpg",new Role(1,"管理员"));
		ims.add(menu);
		ios.add(operator);
		//测试查改
		List<Menu> mls = ims.findByParent(0);
		for (Menu ml : mls) {
			System.out.println(ml.toString());
		}
		List<Operator> ops = ios.find();
		for (Operator op : ops) {
			System.out.println(op.toString());
		}
		Menu m = new Menu("个人信息修改",1,"","");
		ims.update(m);
		Operator opt = new Operator("user","123","10086","123456@163.cn","b.jpg",new Role(1,"管理员"));
		//测试删
		
	}

}
